<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            app:behavior_hideable="false"
            app:behavior_peekHeight="65dp"
            android:background="@drawable/bottom_sheet_bkg"
            android:orientation="vertical"
            >
            <Button
                android:layout_width="40dp"
                android:layout_height="2dp"
                android:background="@color/primaryColors"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/startBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_margin="8dp"
                    android:paddingEnd="50dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingStart="7dp"
                    android:gravity="center"
                    android:textColor="@color/primaryColors"
                    android:foreground="@color/extraFadedBlue"
                    android:background="@drawable/ripple"
                    android:text="START RIDE"/>



                <ImageView
                    style="@style/smallIconBtnStyle"
                    android:src="@drawable/btn_refresh"
                    android:contentDescription="RELOAD" />

                <ImageView
                    style="@style/smallIconBtnStyle"
                    android:foreground="@drawable/btn_delete"
                    android:layout_marginEnd="2dp"
                    android:contentDescription="DELETE" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <TextView
                    style="@style/TextLabelForPendingFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From:"/>

                <TextView
                    style="@style/TextForPendingFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ablekuma"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/extraFadedBlue"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/TextLabelForPendingFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To:"/>

                <TextView
                    style="@style/TextForPendingFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lapaz"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/extraFadedBlue"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/TextLabelForPendingFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date:"/>

                <TextView
                    style="@style/TextForPendingFragment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="15th March 1998"/>


                <ImageView
                    style="@style/smallIconBtnStyle"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/btn_edit"/>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/extraFadedBlue"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/TextLabelForPendingFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time:"/>

            <TextView
                style="@style/TextForPendingFragment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="15:00pm"/>

            <ImageView
                style="@style/smallIconBtnStyle"
                android:layout_marginEnd="5dp"
                android:src="@drawable/btn_edit"/>
        </LinearLayout>
        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</RelativeLayout>